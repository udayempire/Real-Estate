generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String  @id @default(cuid())
  firstName    String
  lastName     String
  email        String  @unique
  phone        String  @unique
  password     String
  avatar       String?
  isBlocked    Boolean @default(false)
  referralCode String  @unique
  referrerId   String?
  referrer     User?   @relation("Referrals", references: [id], fields: [referrerId])
  referrals    User[]  @relation("Referrals") //users referred by User. 
  points       Int     @default(0)

  //verification
  isEmailVerified Boolean @default(false)

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  kyc           Kyc[]
  properties    Property[]
  otps          Otp[]
  refreshTokens RefreshToken[]

  @@index([id, email])
  @@map("users")
}

//property
enum PropertyType {
  FARMLAND
  DUPLEX
  FLAT
  PLOT
}

enum PropertyStatus {
  ACTIVE
  INACTIVE
  SOLD
  DRAFT
}

enum SizeUnit {
  ACRES
  UNITS
  SQFT
  SQMT
}

model Property {
  id           String         @id @default(cuid())
  title        String
  description  String?
  propertyType PropertyType
  status       PropertyStatus @default(ACTIVE)
  priceMin     Float
  priceMax     Float? //for price range
  state        String
  city         String
  area         String
  address      String
  latitude     Float
  longitude    Float
  size         Float?
  sizeUnit     SizeUnit

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  //Relations
  userId String
  user   User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  media  PropertyMedia[]

  @@index([userId])
  @@index([propertyType])
  @@index([status])
  @@index([state, city])
  @@index([priceMin])
  @@map("properties")
}

// property media

enum MediaType {
  IMAGE
  VIDEO
}

model PropertyMedia {
  id        String    @id @default(cuid())
  url       String
  key       String // s3 key for deletion
  mediaType MediaType
  order     Int       @default(0) // for ordering photos
  createdAt DateTime  @default(now())

  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@index([propertyId])
  @@map("property_media")
}

enum KycType {
  AADHARCARD
  PANCARD
}

enum KycStatus {
  PENDING
  VERIFIED
  REJECTED
}

model Kyc {
  id              String @id @default(cuid())
  type            KycType
  status          KycStatus @default(PENDING)
  docNo           String
  imageUrl        String
  imageKey        String
  rejectionReason String?
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@unique([userId, type])
  @@index([userId])
  @@index([status])
  @@map("kyc")
}

//AUTH

enum OtpType {
  EMAIL
  PHONE
  RESET_PASSWORD
}

model Otp {
  id        String   @id @default(cuid())
  code      String
  type      OtpType
  expiresAt DateTime
  isRevoked Boolean  @default(false)
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, type])
  @@map("otps")
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  expiresAt DateTime
  isRevoked Boolean  @default(false)
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("refresh_tokens")
}
